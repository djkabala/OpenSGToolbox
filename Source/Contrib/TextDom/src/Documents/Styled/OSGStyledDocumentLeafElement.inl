inline
UInt32 StyledDocumentLeafElement::getTextLength(void)
{
	return _Properties.text.size()+(_Properties.ends?1:0);
}

inline 
std::string StyledDocumentLeafElement::getText(void)
{
	return _Properties.text+(_Properties.ends?"\n":"");
}

inline 
void StyledDocumentLeafElement::setText(std::string _Text)
{
	_Properties.text = _Text;
}

inline 
TextWithProps& StyledDocumentLeafElement::getProperties(void)
{
	return _Properties;
}

inline
void StyledDocumentLeafElement::setProperties(TextWithProps& props)
{
	_Properties = props;
}


OSG_END_NAMESPACE
